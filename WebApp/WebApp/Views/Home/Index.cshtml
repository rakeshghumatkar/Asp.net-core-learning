@model IEnumerable<Employee>
@{
    @*Layout = "~/Views/Shared/_Layout.cshtml";*@
    ViewBag.Title = "Employee List";

}
<link href="~/css/site.css" rel="stylesheet" />

<div class="card-group">
    @foreach (var employee in Model)
    {
        var photoPath = "~/Images/" + (employee.PhotoPath?? "img.jpg");
        <div class="card m-3"style="min-width:18rem; max-width:30.5%;">

            <h3>@employee.Name</h3>

            <img class="card-img-top imagethumbnail" src="@photoPath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id"
                   class="btn btn-primary">View</a>

                <a asp-controller="home" asp-action="edit" asp-route-id="@employee.Id"
                   class="btn btn-primary">Edit</a>

                <a asp-controller="home" asp-action="delete" asp-route-id="@employee.Id"
                   class="btn btn-danger">Delete</a>
            </div>
        </div>

    }
</div>

