<h1>@Model.PageTitle</h1>
<img class="card-body text-center" src="@photoPath" asp-append-version="true" width="200px" height="200px" />
<div>
    Name : @Model.Employee.Id
</div>
<div>
    Name : @Model.Employee.Name
</div>
<div>
    Department : @Model.Employee.Department
</div>
<div>
    Email : @Model.Employee.Email
</div>
<div class="card-footer text-center">
    <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
    <a asp-controller="home" asp-action="edit" class="btn btn-primary">Edit</a>
    <a href="#" class="btn btn-danger">Delete</a>
</div>
@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}