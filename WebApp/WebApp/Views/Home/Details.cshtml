@model DetailsHomeViewModel
@{
    ViewBag.Title = "Employee Details";
    var photoPath = "~/Images/" + (Model.Employee.PhotoPath?? "img.jpg");
}

@*@{
     var employee = ViewData["Employee"] as WebApp.Models.Employee;
    }
    <h3> @ViewBag.PageTitle</h3>
