@model List<UserRoleViewModel>

@{ 
    var roleId = ViewBag.RoleId;
}

<form method="post">
    <div class="card">
        <div class="card-title">
            <h2>Add or Remove users from this role</h2>
        </div>
        <div class="card-body">
            <div>
                @for (int i = 0; i < Model.Count; i++)
                {
                <div class="form-check m-1">
                    <input hidden asp-for="@Model[i].UserId" />
                    <input hidden asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].UserName</label>
                </div>
                }
            </div>
        </div>

        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a class="btn btn-primary" style="width:auto" asp-controller="Administration" asp-action="EditRole" asp-route-Id="@roleId">Cancel</a>
        </div>
    </div>
</form>